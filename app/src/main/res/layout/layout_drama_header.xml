<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

    <RelativeLayout
        android:id="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <View
            android:id="@+id/flag"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/flag"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/app_name"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="@string/more"/>
    </RelativeLayout>

    <cn.jas0n.amovie.ui.view.FixedGridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_layout"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"/>

    <RelativeLayout
        android:id="@+id/rec_category_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/grid"
        android:layout_marginTop="5dp">

        <View
            android:id="@+id/rec_flag"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/rec_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rec_flag"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/app_name"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/rec_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="@string/more"/>
    </RelativeLayout>

    <cn.jas0n.amovie.ui.view.FixedGridView
        android:id="@+id/rec_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rec_category_layout"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"/>

    <RelativeLayout
        android:id="@+id/hot_category_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/rec_grid"
        android:layout_marginTop="5dp">

        <View
            android:id="@+id/hot_flag"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/hot_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/hot_flag"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/app_name"
            android:textColor="@color/primaryText"/>

        <TextView
            android:id="@+id/hot_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="@string/more"/>
    </RelativeLayout>
</RelativeLayout>